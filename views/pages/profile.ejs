<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE-edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />

    <link rel="stylesheet" href="/public/icofont/icofont.min.css" />
    <link rel="stylesheet" href="/public/css/font.css" />

    <link rel="stylesheet" href="/public/admin/css/template.css" />
    <link rel="stylesheet" href="/public/admin/css/header.css" />
    <link rel="stylesheet" href="/public/admin/css/navigation.css" />
    <link rel="stylesheet" href="/public/admin/css/popup.css" />
    <link rel="stylesheet" href="/public/admin/css/profile.css" />
  </head>

  <body>
    <!--HEADER-->
    <header class="up">
      <h2 class="upr"><%=user.role%> Panel</h2>

      <div class="upl">
        <span class="item power"><i class="icofont-power"></i></span>
      </div>
    </header>

    <div class="lp">
      <!--SIDE NAVIGATION-->
      <%-include("../partials/navigation.ejs", {user:user})%>
      <!--MAIN CONTENT-->
      <div class="llp">
        <!--MAIN CONTENT HEAD-->
        <div class="head">
          <h3>Profile</h3>
        </div>

        <!--MAIN CONTENT BODY-->
        <div class="profile">
          <div class="profile-form">
            <h3>Change Profile</h3>
            <form class="chng-profile">
              <div class="inputs">
                <input name="name" placeholder="Name" value="<%=user.name%>" />
                <input
                  name="username"
                  placeholder="Username"
                  value="<%=user.username%>"
                />
              </div>
              <button>Save Changes</button>
            </form>
          </div>
          <div class="profile-form">
            <h3>Change Password</h3>
            <form class="chng-pwd">
              <div class="inputs">
                <input name="password" placeholder="Old Password" />
                <input name="newPassword" placeholder="New Password" />
              </div>
              <button>Save Changes</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!--popup form part-->
    <div class="backdrop">
      <div class="popup"></div>
    </div>
    <!--popup form part-->
  </body>

  <script>
    const userId = "<%=user._id%>"
  </script>
  <script defer src="/public/admin/js/profile/template.js"></script>
  <script defer src="/public/admin/js/profile/profile.js"></script>
  <script defer src="/public/admin/js/logout.js"></script>
</html>
